    <Appenders>
        <Kafka name ="KAFKA" topic="log4j2-kafka" syncSend="false">  
          <PatternLayout pattern ="%d{yyyy-MM-dd HH:mm:ss,SSS}:%4p %t (%F:%L) - %m%n"/>  
          <Property name ="bootstrap.servers" >0.0.0.0:9092</Property> 
          <Property name ="retries" >3</Property> 
          <Property name ="linger.ms" >1000</Property> 
          <Property name ="buffer.memory" > 10485760</Property> 
        </Kafka>
    </Appenders>
    <Loggers>
       <!-- additivity属性作用是在使用当前Logger配置的Appender打印日志 -->
        <Logger name="org.springframework" level="INFO" />
        <Logger name="com.demo" level="INFO" />
        <Logger name="springfox" level="INFO" />
        <Logger name="org.hibernate" level="INFO" />
        <Logger name="io.netty" level="INFO" />
        <Logger name="org.elasticsearch" level="INFO" />
        <Logger name="org.thymeleaf" level="WARN" />

       <!-- Root表示所有Logger用Root中的Appender打印日志  -->
       <Root level ="INFO" >
          <AppenderRef ref="CONSOLE"/>
          <AppenderRef ref="KAFKA"/>
       </Root>
    </Loggers>
</configuration>